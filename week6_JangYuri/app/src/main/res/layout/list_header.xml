<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/borderline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:text="내 프로필"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_item_pPic_me"
            android:src="@drawable/basic_pic"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="7dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/list_item_name_me"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center_vertical|left"
            android:text="name"/>
        <TextView
            android:id="@+id/list_item_message_me"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:text="message" />

    </LinearLayout>

    <TextView
        android:background="@drawable/borderline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:text="즐겨찾기"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_item_pPic_mark"
            android:src="@drawable/basic_pic"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="7dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/list_item_name_mark"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center_vertical|left"
            android:text="name"/>
        <TextView
            android:id="@+id/list_item_message_mark"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:text="message" />

    </LinearLayout>

    <TextView
        android:background="@drawable/borderline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:text="추천친구"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_item_pPic_recom"
            android:src="@drawable/ryan"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="7dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/list_item_name_recom"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center_vertical|left"
            android:text="name"/>
        <TextView
            android:id="@+id/list_item_message_recom"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:text="message" />

    </LinearLayout>

    <TextView
        android:background="@drawable/borderline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:text="그룹"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_item_pPic_group"
            android:src="@drawable/plus_friends"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:padding="7dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/list_item_name_group"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:textSize="15dp"
            android:padding="10dp"
            android:gravity="center_vertical|left"
            android:text="name"/>
        <TextView
            android:id="@+id/list_item_message_group"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <TextView
        android:background="@drawable/borderline"
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="10dp"
        android:text="친구"/>

</LinearLayout>